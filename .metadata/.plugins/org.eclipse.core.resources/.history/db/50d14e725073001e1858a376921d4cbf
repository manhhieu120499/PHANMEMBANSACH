		private void chuyenDoiTable() {
			int index = cbbLocDonHang.getSelectedIndex();
			   
			if(index == 0) {
				tbTabQLDonHang.setModel(modelQLDonHangHT);
				
			}
			if(index == 1) {
				tbTabQLDonHang.setModel(modelQLDonHangCHT);
			}
		}
		
