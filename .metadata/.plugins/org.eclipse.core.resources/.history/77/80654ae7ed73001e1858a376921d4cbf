package entity;

public class DonGiaoHang {
	private String maDonGiaoHang;
	private String tenKhachHang;
	private String sdt;
	private String diaChi;
	private String soKg;
	private boolean trangThai;
	private float soKm;
	private NhanVien nhanVien;

	public DonGiaoHang(String maDonGiaoHang, String tenKhachHang, String sdt, String diaChi, String soKg,
			boolean trangThai, NhanVien nhanVien) {
		super();
		this.maDonGiaoHang = maDonGiaoHang;
		this.tenKhachHang = tenKhachHang;
		this.sdt = sdt;
		this.diaChi = diaChi;
		this.soKg = soKg;
		this.trangThai = trangThai;
		this.nhanVien = nhanVien;
	}

	public String getMaDonGiaoHang() {
		return maDonGiaoHang;
	}

	public void setMaDonGiaoHang(String maDonGiaoHang) {
		this.maDonGiaoHang = maDonGiaoHang;
	}

	public String getTenKhachHang() {
		return tenKhachHang;
	}

	public void setTenKhachHang(String tenKhachHang) {
		this.tenKhachHang = tenKhachHang;
	}

	public String getSdt() {
		return sdt;
	}

	public void setSdt(String sdt) {
		this.sdt = sdt;
	}

	public String getDiaChi() {
		return diaChi;
	}

	public void setDiaChi(String diaChi) {
		this.diaChi = diaChi;
	}

	public String getSoKg() {
		return soKg;
	}

	public void setSoKg(String soKg) {
		this.soKg = soKg;
	}

	public boolean isTrangThai() {
		return trangThai;
	}

	public void setTrangThai(boolean trangThai) {
		this.trangThai = trangThai;
	}

	public float getSoKm() {
		return soKm;
	}

	public NhanVien getNhanVien() {
		return nhanVien;
	}

	public void setNhanVien(NhanVien nhanVien) {
		this.nhanVien = nhanVien;
	}
	
	public void tinhSoKm() {
		
		// tính số km gọi bằng google map
		this.soKm = 1;
	}
	
	@Override
	public String toString() {
		// TODO Auto-generated method stub
		return super.toString();
	}

}
